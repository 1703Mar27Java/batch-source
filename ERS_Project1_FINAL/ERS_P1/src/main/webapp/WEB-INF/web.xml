<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ERS_P1</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>master</servlet-name>
  	<servlet-class>com.ers.servlets.MasterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>master</servlet-name>
  	<url-pattern>/MasterServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.ers.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
 
 
 <servlet>
  	<servlet-name>employee</servlet-name>
  	<servlet-class>com.ers.servlets.EmpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>employee</servlet-name>
  	<url-pattern>/EmpServlet</url-pattern>
  </servlet-mapping>
	
  
  <servlet>
  	<servlet-name>manager</servlet-name>
  	<servlet-class>com.ers.servlets.MgrServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>manager</servlet-name>
  	<url-pattern>/MgrServlet</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>request</servlet-name>
  	<servlet-class>com.ers.servlets.RequestHelper</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>request</servlet-name>
  	<url-pattern>/RequestHelper</url-pattern>
  </servlet-mapping>
  
   <error-page>
  		<error-code>404</error-code>
  		<location>/error.jsp</location>
  </error-page>
  
  <session-config>
    <session-timeout>1</session-timeout>
</session-config>
  
</web-app>