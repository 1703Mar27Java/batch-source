<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ReimbursementSystem</display-name>
  
  <error-page>
  	<exception-type>com.Revature.dao.IncorrectLoginException</exception-type>
  	<location>/error.jsp</location>
  </error-page>
  
  <servlet>
  	<servlet-name>loginpage</servlet-name>
  	<servlet-class>com.Revature.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>loginpage</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Create User</servlet-name>
  	<servlet-class>com.Revature.servlet.CreateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Create User</servlet-name>
  	<url-pattern>/createuser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Create Reimbursement</servlet-name>
  	<servlet-class>com.Revature.servlet.CreateReimbursementServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Create Reimbursement</servlet-name>
  	<url-pattern>/createreimbursement</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Fetch reimbursements</servlet-name>
  	<servlet-class>com.Revature.servlet.ReimbursementListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Fetch reimbursements</servlet-name>
  	<url-pattern>/reimblist</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>view reimbursement</servlet-name>
  	<servlet-class>com.Revature.servlet.ViewReimbursementServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>view reimbursement</servlet-name>
  	<url-pattern>/viewreimb</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>approve reimbursement</servlet-name>
  	<servlet-class>com.Revature.servlet.ApproveReimbursementServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>approve reimbursement</servlet-name>
  	<url-pattern>/approvereimb</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>deny reimbursement</servlet-name>
  	<servlet-class>com.Revature.servlet.DenyReimbursementServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>deny reimbursement</servlet-name>
  	<url-pattern>/denyreimb</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>view employees</servlet-name>
  	<servlet-class>com.Revature.servlet.ViewEmployeesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>view employees</servlet-name>
  	<url-pattern>/viewemployees</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>view user</servlet-name>
  	<servlet-class>com.Revature.servlet.ViewUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>view user</servlet-name>
  	<url-pattern>/viewuser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>edit user</servlet-name>
  	<servlet-class>com.Revature.servlet.EditUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>edit user</servlet-name>
  	<url-pattern>/edituser</url-pattern>
  </servlet-mapping>
  
  
</web-app>